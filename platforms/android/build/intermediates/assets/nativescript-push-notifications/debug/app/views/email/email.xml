<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  
    <Page.actionBar>
        <ActionBar title=" " tap="gotoView"  cssClass="custom-actionbar">
            <ActionBar.actionItems>
                <ActionItem id="projectdetails" text="back" tap="{{ gotoView }}" ios.position="right" />
                <ActionItem text="Change" id="change-edit" tap="gotoView" ios.position="right" />
                <ActionItem text="drop" tap="{{ drop }}" ios.position="right" />
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
  
  <StackLayout orientation="vertical">
    <Label text="Preview and email a copy of the Change Order to the client" class="title"  textWrap="true"/>
    <Button text="Email" tap="{{ sendOrder }}" />
  </StackLayout>
  
</Page>
