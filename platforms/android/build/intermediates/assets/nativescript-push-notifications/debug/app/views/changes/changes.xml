<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  
    <Page.actionBar>
        <ActionBar title=" " tap="gotoView" cssClass="custom-actionbar">
            <ActionBar.actionItems>
                <ActionItem text="save" tap="{{ saveForm }}" ios.position="right" />
                <ActionItem text="drop" tap="{{ drop }}" ios.position="right" />
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
  
    <ScrollView> 
     <GridLayout columns="40, 90, 50, 1, 30, 50, *" rows="*, *, *, *, *, *, *"  >
        
        <Label row="0" col="0" colSpan="7" text="Fill out details on the Change Order" class="title"  textWrap="true"/>
        
        <Label row="1" col="0" colSpan="7" class="textfield_label" >
            <Span text="Change summary: " class="textfield_label" />
        </Label>
        <TextField row="2" col="0" colSpan="7" id="changessummary" text="{{ changessummary }}" 
            keyboardType="text" autocorrect="true" autocapitalizationType="sentences" textWrap="true" />
        
        <Label row="3" col="0" colSpan="6" class="textfield_label"  textWrap="true" tap="{{ changeCostDirection }}">
            <Span text="Will this change " class="textfield_label" tap="{{ changeCostDirection }}" />
            <Span text="{{ changecostdirection }} " fontAttributes="Bold" class="textfield_label" tap="{{ changeCostDirection }}" />
            <Span text=" the completion cost:" class="textfield_label" tap="{{ changeCostDirection }}" />
        </Label>
        <Switch row="3" col="6" checked="{{ changecost }}" />
        
        <Label row="4" col="1" colSpan="2" text="Change cost:" class="{{ changecost ? 'textfield_label' : 'hide' }}" />
        <Label row="4" col="2" text=" $ " class="{{ changecost ? 'textfield_label' : 'hide' }}" style="text-align:right;" />
        <TextField row="4" col="4" colSpan="2" id="changes_total" text="{{ changes_total }}" keyboardType="text" autocorrect="true" 
            autocapitalizationType="sentences" class="{{ changecost ? 'textfield_value' : 'hide' }}" hint="0.00" />
        
        <Label row="5" col="0" colSpan="6" class="textfield_label"  textWrap="true" tap="{{ changeDateDirection.checked = true }}">
            <Span text="Will this change " class="textfield_label" tap="{{ console.error(1); }}" />
            <Span text="{{ changedatedecrease ? 'decrease' : 'increase' }} " fontAttributes="Bold" class="textfield_label" tap="{{ console.error(1); changeDateDirection.checked = true }}" />
            <Span text=" the completion date:" class="textfield_label" tap="{{ changeDateDirection.checked = true }}" />
        </Label>
        <Switch row="5" col="6" checked="{{ changedatedecrease ? false : true }}" id="changeDateDirection" class="hide"/>
        <Switch row="5" col="6" checked="{{ changedate }}" />
        
        <Label row="6" col="1" colSpan="2" text="{{ '# Days ' + changedatedirection + ':' }}" class="{{ changedate ? 'textfield_label' : 'hide' }}"  />
        <TextField row="6" col="4" colSpan="2" id="changes_competion_date" text="{{ changes_competion_date }}" keyboardType="text" autocorrect="true" 
            autocapitalizationType="sentences" class="{{ changedate ? 'textfield_value' : 'hide' }}" hint="0.00" />
            
        
    </GridLayout>
  </ScrollView>

</Page>
