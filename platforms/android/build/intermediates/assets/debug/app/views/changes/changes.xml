<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  
    <Page.actionBar>
        <ActionBar title=" " tap="gotoView" cssClass="custom-actionbar">
            <ActionBar.actionItems>
                <ActionItem text="save" tap="{{ saveForm }}" ios.position="right" />
                <ActionItem text="drop" tap="{{ drop }}" ios.position="right" />
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
  
  <ScrollView>
    <StackLayout orientation="vertical">   
        <Label text="Fill in details about the Change Order" class="title"  textWrap="true" />
        <TextField id="changessummary" text="{{ changessummary }}" hint="Change Summary" keyboardType="text" autocorrect="true" autocapitalizationType="sentences" />
    </StackLayout>
  </ScrollView>
</Page>
