<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  
    <Page.actionBar>
        <ActionBar title="JobFlow">
            <ActionBar.actionItems>
                <ActionItem text="Cal" id="calendar" tap="gotoView" ios.position="right" />
                <ActionItem text="Main" id="main" tap="gotoView" ios.position="right" />
                <ActionItem text="User" id="user-edit" tap="gotoView" ios.position="right" />
                <ActionItem text="+" id="projects" tap="gotoView" ios.position="right" />
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
  
  <StackLayout  orientation="vertical">
  
    <Label text="Fill out details on the project" class="title"/>
    <TextField id="projectssummary" text="{{ projectssummary }}" hint="Project summary" keyboardType="text" autocorrect="true" autocapitalizationType="sentences" />
    <TextField id="orig_total" text="{{ orig_total }}" hint="Original Total Cost" keyboardType="text" autocorrect="false" autocapitalizationType="none" />
    <TextField id="orig_competion_date" text="{{ orig_competion_date }}" hint="Original Completion Date" keyboardType="text" autocorrect="false" autocapitalizationType="none" />
    <TextField id="contract_date" text="{{ contract_date }}" hint="Date of Contract" keyboardType="text" autocorrect="false" autocapitalizationType="none" />
    <!-- TextView tap="{{ tap }}" id="client" text="{{ client }}" editable="false" hint="Click to add client" keyboardType="text" autocorrect="false" autocapitalizationType="none" /-->
    <Label id="client" text="Click to add client" tap="{{ tap }}"  />
    <!--DatePicker day="15" month="5" year="2015" verticalAlignment="center" horizontalAlignment="center"/-->
        
    <Button id="drop" text="Drop" tap="{{ drop }}" />
    <Button id="save" text="Save" tap="{{ saveForm }}" />
     
  </StackLayout>
</Page>
