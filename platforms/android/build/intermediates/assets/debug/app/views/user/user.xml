<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  
    <Page.actionBar>
        <ActionBar title=" " tap="gotoView" cssClass="custom-actionbar">
            <ActionBar.actionItems>
                <ActionItem text="save" tap="{{ saveForm }}" ios.position="right" />
                <ActionItem text="drop" tap="{{ drop }}" ios.position="right" />
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
  
  <StackLayout orientation="vertical">
  
    <Label text="Tell us about you and your company" class="title"  textWrap="true"/>
    <TextField id="userfirstname" text="{{ userfirstname }}" hint="First name" keyboardType="text" autocorrect="false" autocapitalizationType="words" />
    <TextField id="userlastname" text="{{ userlastname }}" hint="Last name" keyboardType="text" autocorrect="false" autocapitalizationType="words" />
    <TextField id="userphone" text="{{ userphone }}" hint="Phone number" keyboardType="phone" autocorrect="false" autocapitalizationType="none" />
    <TextField id="usercompanyname" text="{{ usercompanyname }}" hint="Company Name" keyboardType="text" autocorrect="false" autocapitalizationType="words" />
    <!-- TextField id="usercompanylogo" text="{{ usercompanylogo }}" hint="Company logo" keyboardType="logo" autocorrect="false" autocapitalizationType="none" / -->
  
  </StackLayout>
</Page>
