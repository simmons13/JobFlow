<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  
    <Page.actionBar>
        <ActionBar title="JobFlow">
            <ActionBar.actionItems>
                <ActionItem text="Cal" id="calendar" tap="gotoView" ios.position="right" />
                <ActionItem text="Main" id="main" tap="gotoView" ios.position="right" />
                <ActionItem text="User" id="user-edit" tap="gotoView" ios.position="right" />
                <ActionItem text="+" id="projects-new" tap="gotoView" ios.position="right" />
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
        
    <StackLayout orientation="vertical">

        <Label text="Tell us details about the client" class="title"/>
        <TextField id="firstname" text="{{ firstname }}" hint="First Name" keyboardType="text" autocorrect="false" autocapitalizationType="words" />
        <TextField id="lastname" text="{{ lastname }}" hint="Last Name" keyboardType="text" autocorrect="false" autocapitalizationType="words" />
        <TextField id="phone" text="{{ phone }}" hint="Phone Number" keyboardType="phone" autocorrect="false" autocapitalizationType="none" />
        <TextField id="email" text="{{ email }}" hint="Email Address" keyboardType="text" autocorrect="false" autocapitalizationType="none" />
        
        <Button id="drop" text="Drop" tap="{{ drop }}" />
        <Button id="save" text="Save" tap="{{ saveForm }}" />
    
    </StackLayout>
</Page>
