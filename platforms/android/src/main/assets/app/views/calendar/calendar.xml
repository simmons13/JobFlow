<Page xmlns:rc="nativescript-telerik-ui/calendar" loaded="onPageLoaded" xmlns="http://www.nativescript.org/tns.xsd">
	<GridLayout orientation="vertical" rows="auto, *, auto">
        <Label text="ViewMode setting" cssClass="example-header"/>
        <rc:RadCalendar id="calendar" 
			viewMode="{{ ViewMode }}"
			row="1"
			height="400"/>
			
		<StackLayout row="2">
			<Button text="Week" tap="onWeekSetViewModeTap"/>
			<Button text="Month" tap="onMonthSetViewModeTap"/>
			<Button text="MonthNames" tap="onMonthNamesSetViewModeTap"/>
			<Button text="Year" tap="onYearSetViewModeTap"/>
			
    	</StackLayout>
    </GridLayout>
</Page>